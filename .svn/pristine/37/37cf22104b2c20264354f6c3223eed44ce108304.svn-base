.ct_tab {
  width: 100%;
  margin: 0 auto;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: #717171;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.ct_tab .ct_item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  border-right: 1px solid #d9d9d9;
  position: relative;
}
.ct_tab .ct_item text {
  padding: 18rpx 0;
}
.ct_tab .ct_item .num {
  color: #fff;
  background-color: #f2092a;
  padding: 2rpx 16rpx;
  font-size: 16rpx;
  border-radius: 10px;
  position: absolute;
  top: -8rpx;
  right: 16%;
}
.ct_tab .ct_item:last-child {
  border: none;
}
.ct_tab .ct_active {
  color: #409eff;
}
.ct_tab .ct_active text {
  border-bottom: 2px solid #409eff;
}


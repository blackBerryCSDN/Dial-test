.title-body {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e7e7e7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.title-body .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.title-body .left .pillar {
  border-left: 3px solid #409eff;
  padding-left: 8rpx;
  line-height: 36rpx;
}
.title-body .left .creater {
  font-size: 20rpx;
  color: #353535;
}
.title-body .right .set {
  font-size: 40rpx;
  color: #409eff;
}
.title-body .right .delete {
  font-size: 40rpx;
  color: #ff4040;
}
.title-body .right .follow {
  color: #fff;
  background-color: #edbe4d;
  padding: 6rpx 20rpx;
  font-size: 14rpx;
  border-radius: 16px;
}

